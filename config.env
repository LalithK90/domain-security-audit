# Security Scanner configuration
# Tune these values per machine without changing code

# Scanner concurrency for per-domain checks
WORKERS=500

# Global rate limit between probes (seconds). Use 0 for no throttle.
RATE_LIMIT=0

# Per-request timeout (seconds)
TIMEOUT=10

# How many domains to process concurrently (keep 1 for sequential)
DOMAIN_WORKERS=1
