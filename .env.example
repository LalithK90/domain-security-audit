# Copy this file to .env and fill in your values
# Never commit .env to git

# ===== REQUIRED =====
DOMAIN=example.com

# ===== LEGAL / ETHICAL MODE =====
# Passive-only (recommended for research): false
# Active probes (only for your own domains or with permission): true
ALLOW_ACTIVE_PROBES=false

# ===== STATE / OUTPUT =====
STATE_DIR=state
OUT_DIR=out
RESCAN_HOURS=24
ERROR_RETRY_HOURS=6
LEASE_MINUTES=30

# ===== PARALLEL EXECUTION =====
# Defaults are auto-tuned based on CPU cores
# WORKERS=64
# ENUM_WORKERS=128
MAX_SCAN_BATCH=200
ENUM_POLL_SECONDS=5
SCAN_POLL_SECONDS=5

# ===== NETWORK SETTINGS =====
RATE_LIMIT=0.05
DNS_TIMEOUT=4.0
HTTP_TIMEOUT=8.0
TLS_TIMEOUT=8.0
HTTP_USER_AGENT=LK-Domain-Security-Research/1.0 (Academic Study; mailto:security-research@example.edu)

# ===== ENUMERATION SOURCES =====
USE_CT_LOGS=true
USE_PUBLIC_DBS=true
USE_DNS_BRUTE=true

# ===== OUTPUT =====
ENABLE_EXCEL=false

# ===== SMART SCANNING =====
ENABLE_SMART_PROFILING=true
MAX_SCAN_ATTEMPTS=3
SCAN_TIMEOUT_SECONDS=300
SKIP_BRUTE_ON_WILDCARD=true
KNOWN_SUBDOMAINS=
